<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student_login.vardaan.Contact.ContactFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/OurContact"
            android:layout_height="wrap_content"
            android:text="OUR CONTACT INFORMATION"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:textSize="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat_regular"/>
        <ImageView
            android:id="@+id/SendIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/OurContact"
            android:paddingLeft="25dp"
            android:src="@drawable/ic_send"/>
        <TextView
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-MAIL"
            android:layout_below="@id/SendIcon"
            android:textSize="30dp"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat_regular"/>

        <TextView
            android:id="@+id/emial1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vardaanfoundation@outlook.com"

            android:paddingLeft="25dp"
            android:textSize="18dp"
            android:layout_below="@id/Email"
            android:fontFamily="@font/montserrat"/>
        <TextView
            android:id="@+id/emial2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="msec.help.info@gmail.com"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:textSize="18dp"
            android:layout_below="@id/emial1"
            android:fontFamily="@font/montserrat"/>
        <ImageView
            android:id="@+id/SendIcon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emial2"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:src="@drawable/ic_phone"/>
        <TextView
            android:id="@+id/Phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHONE"
            android:layout_below="@id/SendIcon2"
            android:textSize="30dp"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat_regular"/>
        <TextView
            android:id="@+id/phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91-95583 93315"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:textSize="20dp"
            android:layout_below="@id/Phone"
            android:fontFamily="@font/montserrat"
            />
        <TextView
            android:id="@+id/phone2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91-95583 93316"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:textSize="20dp"
            android:layout_below="@id/phone1"
            android:fontFamily="@font/montserrat"/>
        <ImageView
            android:id="@+id/website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone2"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:src="@drawable/ic_globe"/>
        <TextView
            android:id="@+id/websiteText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WEBSITE"
            android:layout_below="@id/website"
            android:textSize="30dp"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat_regular"/>
        <TextView
            android:id="@+id/web1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.vardaanfoundation.com"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:textSize="20dp"
            android:layout_below="@id/websiteText"
            android:fontFamily="@font/montserrat"
            />
        <TextView
            android:id="@+id/web2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="www.m-sec.weebly.com"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:textSize="20dp"
            android:layout_below="@id/web1"
            android:fontFamily="@font/montserrat"/>
        <ImageView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/web2"
            android:paddingLeft="25dp"
            android:paddingTop="25dp"
            android:src="@drawable/ic_location"/>
        <TextView
            android:id="@+id/address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADDRESS"
            android:layout_below="@id/address"
            android:textSize="30dp"
            android:paddingLeft="25dp"
            android:textColor="#000000"
            android:fontFamily="@font/montserrat_regular"/>
        <TextView
            android:id="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marwadi University,
Hostel A-806,
Rajkot-Morbi Road, Opp Mahadev vadi,
Near Gauridad,
Rajkot, Gujarat-360003"
            android:paddingTop="10dp"
            android:paddingLeft="25dp"
            android:textSize="20dp"
            android:layout_below="@id/address1"
            android:fontFamily="@font/montserrat"
            />

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape3"
            android:layout_below="@id/address2">
            <TextView
                android:id="@+id/contactus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CONTACT US"
                android:textSize="30dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:fontFamily="@font/droidserif_regular"/>
            <EditText
                android:id="@+id/ContactName"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:paddingLeft="10dp"
                android:hint="YOUR NAME*"
                android:layout_below="@+id/contactus"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:layout_centerInParent="true"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/ContactMail"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:hint="YOUR EMAIL ID*"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:background="@drawable/shape"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_below="@+id/ContactName"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/contactSubject"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:hint="SUBJECT*"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_below="@+id/ContactMail"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/contactMessage"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:hint="YOUR MESSAGE"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:layout_centerInParent="true"
                android:layout_below="@+id/contactSubject"
                android:textSize="20dp"/>
            <Button
                android:id="@+id/ButtonSubmit"
                android:layout_width="350dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:text="SUBMIT"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/droidserif_regular"
                android:background="@drawable/shape2"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:layout_below="@+id/contactMessage"/>


        </RelativeLayout>





    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
