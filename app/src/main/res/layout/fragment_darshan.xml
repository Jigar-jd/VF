<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.student_login.vardaan.Founders.DarshanFragment">

    <RelativeLayout
        android:id="@+id/relativeVarsha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/LinearVarsha">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/varsha"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:paddingTop="20dp"
                android:src="@drawable/ds"
                app:civ_border_width="1dp"
                app:civ_border_color="#0d0d0d"/>
        </LinearLayout>


        <TextView
            android:id="@+id/varshaJaisalmeria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DARSHAN SALUNKE"
            android:paddingTop="25dp"
            android:textSize="26dp"
            android:textColor="#ff4073"
            android:gravity="center"
            android:fontFamily="@font/montserrat_regular"
            android:layout_below="@id/LinearVarsha"/>

        <TextView
            android:id="@+id/darshanQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:fontFamily="@font/droidserif_italic"
            android:textColor="#000000"
            android:text="@string/darshan_quote"
            android:layout_below="@id/varshaJaisalmeria"/>
        <TextView
            android:id="@+id/gandhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- MAHATMA GANDHI"
            android:textSize="24dp"
            android:paddingTop="17dp"
            android:textColor="#ff4073"
            android:gravity="right"
            android:paddingRight="10dp"
            android:fontFamily="@font/droidserif_bold"
            android:layout_below="@+id/darshanQuote"/>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>
