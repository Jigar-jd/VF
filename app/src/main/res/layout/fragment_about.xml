<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student_login.vardaan.About.AboutFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeAbout">
        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:padding="10dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/slider_about_us"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/the_rise_of_vardaan"
            android:textSize="30dp"
            android:textColor="#FFFC2C62"
            android:fontFamily="@font/montserrat_regular"
            android:layout_below="@id/image1"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/aboutsus"/>
        <TextView
            android:id="@+id/VisionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vision"
            android:textSize="20dp"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:textColor="#FFFC2C62"
            android:layout_below="@id/aboutsus"
            android:fontFamily="@font/droidserif_bold"
            android:gravity="left" />
        <TextView
            android:id="@+id/visionDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vision_desc"
            android:textSize="15dp"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:layout_below="@id/VisionTitle"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="left" />
        <TextView
            android:id="@+id/MissionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mission"
            android:textSize="20dp"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:textColor="#FFFC2C62"
            android:layout_below="@id/visionDesc"
            android:fontFamily="@font/droidserif_bold"
            android:gravity="left" />
        <TextView
            android:id="@+id/missionDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vision_desc"
            android:textSize="15dp"
            android:padding="5dp"
            android:paddingLeft="15dp"
            android:textColor="#000000"
            android:layout_below="@id/MissionTitle"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="left" />

    </RelativeLayout>



</android.support.v4.widget.NestedScrollView>
