<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/LinearVarsha">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/picTeam"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:paddingTop="20dp"
                    android:src="@drawable/ds"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#0d0d0d"/>
            </LinearLayout>
            <TextView
                android:id="@+id/TeamName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DARSHAN SALUNKE"
                android:paddingTop="20dp"
                android:textSize="26dp"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:fontFamily="@font/droidserif_bold"
                android:layout_below="@id/LinearVarsha"/>
            <TextView
                android:id="@+id/TeamDesignation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Volunteer"
                android:paddingTop="0dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:fontFamily="@font/droidserif_bold"
                android:layout_below="@id/TeamName"/>

        </RelativeLayout>




</RelativeLayout>
