<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.student_login.vardaan.Login.LoginActivity">
    <!--<ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_logo"/>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="false">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:background="#ff4081">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_lock"
                    android:tint="@color/TextWhite"
                    android:background="@drawable/circle"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="LOGIN"
                    android:textColor="@color/TextWhite"
                    android:fontFamily="@font/droidserif_bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="20dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:id="@+id/imgViewSharp"
                android:src="@drawable/squares"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="-15dp"
                android:rotation="45"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/linearLayout1"/>
            <RelativeLayout
                android:id="@+id/relativelayout1"
                android:layout_below="@id/imgViewSharp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/imgViewUserIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_user"
                    android:tint="@color/TextWhite"
                    android:background="@color/colorPrimary"/>
                <EditText
                    android:id="@+id/etxtUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTxtBg"
                    android:layout_toRightOf="@+id/imgViewUserIcon"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:hint="Email ID"
                    android:layout_alignBottom="@id/imgViewUserIcon"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativelayout2"
                android:layout_below="@id/relativelayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                >
                <ImageView
                    android:id="@+id/imgViewPassIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_password"
                    android:tint="@color/TextWhite"
                    android:background="@color/colorPrimary"/>
                <EditText
                    android:id="@+id/etxtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/editTxtBg"
                    android:layout_toRightOf="@+id/imgViewPassIcon"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="20dp"
                    android:hint="Password"
                    android:layout_alignBottom="@id/imgViewPassIcon"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RelativeLayout3"
                android:layout_below="@+id/relativelayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/rememberMeBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remember me"
                    android:textSize="18dp"
                    android:fontFamily="@font/droidserif_bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/colorPrimary"/>
                <Button
                    android:id="@+id/SignInbtn"
                    android:layout_below="@id/rememberMeBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/TextWhite"
                    android:text="SIGN IN"
                    android:background="@color/colorPrimary"
                    android:layout_marginRight="20dp"/>
                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/SignInbtn"/>
                <ImageButton
                    android:id="@+id/facebookBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_facebook_btn"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="20dp"
                    android:clickable="true"
                    android:background="@color/TextWhite"
                    android:layout_below="@+id/line"/>
                <ImageButton
                    android:id="@+id/instagramBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_instagram_btn"
                    android:layout_toRightOf="@id/facebookBtn"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="70dp"
                    android:clickable="true"
                    android:background="@color/TextWhite"
                    android:layout_below="@+id/line"/>

                <ImageButton
                    android:id="@+id/googleBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/SignInbtn"
                    android:layout_below="@+id/line"
                    android:background="@color/TextWhite"
                    android:layout_marginTop="8dp"
                    android:clickable="true"
                    android:src="@drawable/ic_gmail_btn" />
                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/googleBtn"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/RelativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeLayout3">
                <TextView
                    android:id="@+id/signupTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="IF YOU DO NOT HAVE YOUR VARDAAN ACCOUNT :- SIGN UP"
                    android:fontFamily="@font/droidserif_bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

            </RelativeLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>
